# Application Environment Variables
# Ansible tarafÄ±ndan /opt/unified-graph/.env olarak deploy edilir

# Environment
NODE_ENV={{ node_env | default('production') }}
PORT={{ app_port | default(4000) }}

# Security Settings
QUERY_DEPTH_LIMIT={{ query_depth_limit | default(7) }}
QUERY_COMPLEXITY_LIMIT={{ query_complexity_limit | default(1000) }}

# Rate Limiting
RATE_LIMIT_WINDOW_MS={{ rate_limit_window_ms | default(900000) }}
RATE_LIMIT_MAX={{ rate_limit_max | default(100) }}

# CORS (Production'da spesifik domain kullan)
CORS_ORIGIN={{ cors_origin | default('*') }}

# Logging
LOG_LEVEL={{ log_level | default('info') }}
ENABLE_AUDIT_LOG={{ enable_audit_log | default('true') }}
