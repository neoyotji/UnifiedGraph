{
  "name": "unified-graph-gateway",
  "version": "1.0.0",
  "description": "GraphQL API Gateway with security hardening",
  "main": "src/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node src/index.js",
    "dev": "cross-env NODE_ENV=development nodemon src/index.js",
    "lint": "eslint src/",
    "audit": "npm audit --audit-level=high",
    "security-check": "npm audit && npx njsscan ./src"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cross-env": "^7.0.3",
    "apollo-server-express": "^3.12.0",
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "dataloader": "^2.2.2",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "graphql": "^16.6.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-validation-complexity": "^0.4.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-plugin-security": "^2.1.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}